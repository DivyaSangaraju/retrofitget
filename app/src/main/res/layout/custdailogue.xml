<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/Dcanceltv"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="@drawable/cancel"
            android:layout_margin="10dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_margin="1dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="User_Id"
            android:gravity="center"
            android:textStyle="normal"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/DUidTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="7994312786Prav"
            android:textStyle="bold"
            android:gravity="start"
            android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_margin="1dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Property"
            android:gravity="center"
            android:textStyle="normal"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/DPropertyTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="KTR-Shop NO2"
            android:textStyle="bold"
            android:gravity="start"
            android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_margin="1dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bill_No"
            android:gravity="center"
            android:textStyle="normal"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/DBillnoTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bill/Tuda/2022/0001"
            android:textStyle="bold"
            android:gravity="start"
            android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_margin="1dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Rental Period"
            android:gravity="center"
            android:textStyle="normal"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/DRperiodTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Feb 1,2022"
            android:textStyle="bold"
            android:gravity="start"
            android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_margin="1dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Rental Amt"
            android:gravity="center"
            android:textStyle="normal"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/DRamntTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1000"
            android:textStyle="bold"
            android:gravity="start"
            android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_margin="1dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Total Amt"
            android:gravity="center"
            android:textStyle="normal"
            android:textSize="18sp"/>
        <EditText
            android:id="@+id/DTamntEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:gravity="start"
            android:textSize="20sp"
            android:inputType="number"/>
    </LinearLayout>
    <LinearLayout

        android:id="@+id/btnllyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <Button
            android:id="@+id/proceedBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="PROCEED"
            android:gravity="center"
            android:visibility="gone"
            android:layout_margin="2dp"/>
        <Button
            android:id="@+id/paypartialBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="PAY PARTIAL AMOUNT"
            android:layout_margin="2dp"
            android:visibility="gone"/>
    </LinearLayout>
   <!-- <Button
        android:id="@+id/Dpayamnt"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Pay Partial Amount"
        android:layout_margin="10dp"
        android:textColor="#fff"
        android:background="@drawable/colouredrect"/>-->
</LinearLayout>